<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="260dp"
    android:id="@+id/DialogUpdate"
    android:orientation="vertical">
    <TextView
        android:layout_margin="20dp"
        android:text="일정 수정하기"
        android:id="@+id/DiaryChange"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Dialog_Linear1"
        android:orientation="horizontal">
        <TextView
            android:text="일정 이름"
            android:id="@+id/DiaryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
        <EditText
            android:hint="이름"
            android:id="@+id/updateName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Dialog_Linear2"
        android:orientation="horizontal">
        <TextView
            android:text="(xx)시"
            android:id="@+id/DialogHour"
            android:gravity="center"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
        <EditText
            android:hint="0~24"
            android:id="@+id/updateHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Dialog_Linear3"
        android:orientation="horizontal">
        <TextView
            android:text="(xx)분"
            android:gravity="center"
            android:id="@+id/DialogMinute"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
        <EditText
            android:hint="0~60"
            android:id="@+id/updateMinute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/Dialog_Linear4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text="수정"
            android:id="@+id/updateSave"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:text="취소"
            android:id="@+id/updateCancel"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>